{
  "name": "@daangn/design-token",
  "version": "0.1.3",
  "sideEffects": false,
  "types": "./lib/index.d.ts",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    },
    "./colors/light.css": "./lib/colors/light.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daangn/design-system",
    "directory": "packages/design-token"
  },
  "maintainers": [
    {
      "name": "Tim K",
      "email": "tim@daangn.com"
    }
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "test": "tap",
    "build": "concurrently \"yarn:build:*\" && node ./export-css.mjs",
    "build:tsc": "tsc --emitDeclarationOnly",
    "build:cjs": "babel src --env-name commonjs -d lib -x .ts --source-maps true",
    "build:esm": "babel src --env-name esmodule -d lib -x .ts --source-maps true --out-file-extension .mjs",
    "prepack": "rimraf lib && yarn build"
  },
  "files": [
    "src",
    "lib"
  ],
  "dependencies": {
    "core-js": "^3.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-modules": "^0.1.4",
    "@babel/preset-typescript": "^7.13.0",
    "@types/common-tags": "^1.8.0",
    "@types/tap": "^14.10.3",
    "babel-plugin-module-extension-resolver": "^1.0.0-rc.2",
    "babel-preset-minify": "^0.5.1",
    "concurrently": "^6.0.0",
    "rimraf": "^3.0.2",
    "tap": "^14.11.0",
    "typescript": "^4.2.3"
  }
}
